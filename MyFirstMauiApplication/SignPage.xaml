<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMauiApplication.SignPage"
             BackgroundColor="Black"
             Title="SignPage">
    <VerticalStackLayout>

        <Image
         Source="amazonprimevideo"
         HeightRequest="185"
         Aspect="AspectFit"
         SemanticProperties.Description="Amazon Video Black Background" />


        <Label 
         Text="Fill in the required details*"
         VerticalOptions="Center" 
         HorizontalOptions="Center"
         TextColor="White"
         FontSize="Title"
         FontAttributes="Bold"
         Margin="5"/>


        <Entry
         Text="First and last name*"
         TextColor="White" 
         FontSize="17" 
         Margin="20"/>

        <Entry
         Text="Mobile number or email*"
         TextColor="White"
         FontSize="17"
         Margin="20"/>

        <Entry
         Text="Create a password*"
         TextColor="White"
         FontSize="17"
         Margin="20"/>

        <Button
         WidthRequest="350"
         Text="Continue"
         FontSize="Large"
         BackgroundColor="Orange"
         BorderColor="Orange"
         StyleId="GrandHomePage"
         BorderWidth="46"
         Clicked="Button_Clicked_1" />



    </VerticalStackLayout>
</ContentPage>